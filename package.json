{
  "name": "chrome-react-devtools-talk",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "dependencies": {
    "husky": "^2.1.0",
    "lint-staged": "^8.1.5",
    "mdx-deck": "^2.3.2",
    "prettier": "^1.17.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{md,mdx,html,js,toml}": [
      "prettier --write",
      "git add"
    ]
  },
  "scripts": {
    "start": "mdx-deck src/slides.mdx",
    "build": "mdx-deck build src/slides.mdx"
  }
}
